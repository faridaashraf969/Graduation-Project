@model Course

@{
    ViewBag.Title = "Delete Course";
}

<h2>Delete Course</h2>

<h4>Are you sure you want to delete this course?</h4>

<hr />
<div>
    <h4>Course : @Model.Topic</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Title
        </dt>
        <dd class="col-sm-10">
            @Model.Topic
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            Price
        </dt>
        <dd class="col-sm-10">
            EGP @Model.Price
        </dd>
        <dt class="col-sm-2">
            Video URL
        </dt>
        <dd class="col-sm-10">
            @Model.VideoContentUrl
        </dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a href="@Url.Action("CourseList")" class="btn btn-secondary">Cancel</a>
    </div>
</form>

