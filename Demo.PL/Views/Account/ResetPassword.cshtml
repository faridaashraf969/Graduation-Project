@model ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Confirm new password</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Barlow:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&family=Berkshire+Swash&family=Fira+Sans:ital,wght@1,100&family=Montserrat:ital,wght@0,100..900;1,100..900&family=Mrs+Saint+Delafield&family=Oswald:wght@500&family=Raleway:ital,wght@1,500&family=Roboto:ital@1&family=Rubik+Iso&display=swap" rel="stylesheet">
    <link href="~/css/resetpassword.css" rel="stylesheet" />

</head>
<body>
    <!-- the big login box div -->
    <div class="login-box">
        <h2 id="h2">Confirm new password</h2>
        <form action="#">
            <div class="textbox">
                <!-- new password -->
                <label>New password</label><br>
                <input type="password" name="password" required>
                <!-- confirm new password -->
                <label>Confirm New password</label><br>
                <input type="password" name="password" required>
            </div>
            <!-- button  -->
            <input type="submit" class="btn" value="Reset"><br>
        </form>
    </div>

</body>
