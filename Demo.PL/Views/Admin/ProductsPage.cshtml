@model IEnumerable<Product>
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<section class="container product-list">
    <h3>Your Product list</h3>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(p => p.Image)</th>
                <th>@Html.DisplayNameFor(p => p.Id)</th>
                <th>@Html.DisplayNameFor(p => p.Name)</th>
                <th>@Html.DisplayNameFor(p => p.Description)</th>
                <th>@Html.DisplayNameFor(p => p.Quantity) </th>
                <th>@Html.DisplayNameFor(p => p.Price)</th>
                <th>@Html.DisplayNameFor(p => p.Category)</th>

                <th>@Html.DisplayNameFor(p => p.Status)</th>
                <th>Approve</th>
                <th>Update</th>
                <th>Delete</th>

            </tr>
        </thead>
        <tbody>
            @{
                foreach (var Product in Model)
                {
                    <tr>
                        <td><img src="~/Files/Images/@Product.ImageName" class="rounded" height="40" width="40" alt="Product Image" /></td>

                        <td>@Product.Id</td>
                        <td>@Product.Name</td>
                        <td>@Product.Description</td>
                        <td>@Product.Quantity</td>
                        <td>@Product.Price</td>
                        <td>@Html.DisplayFor(P => Product.Category.Name)</td>
                        <td>@Product.Status</td>
                        <td><a asp-action="ApproveProduct" asp-controller="Admin" asp-route-id="@Product.Id"><i class="fa-check fa-solid" style="color:green"></i></a></td>

                        <td><a asp-action="EditProduct" asp-route-id="@Product.Id"><i class="fas fa-edit"></i></a></td>
                        <td><a asp-action="DeleteProduct" asp-route-id="@Product.Id"><i class="fa-sharp fa-solid fa-trash" style="color: #e60f24;"></i></a></td>

                    </tr>
                }
            }
        </tbody>
    </table>
</section>
