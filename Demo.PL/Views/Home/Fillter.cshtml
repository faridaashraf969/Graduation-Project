                <div class="filter-section">
                    <h3>Availability</h3>
                    <label><input type="checkbox" class="filter" name="availability" value="Weekdays"> Weekdays</label>
                    <label><input type="checkbox" class="filter" name="availability" value="Weekends"> Weekends</label>
                    <label><input type="checkbox" class="filter" name="availability" value="Anytime"> Anytime</label>
                </div>
            </aside>
            <!-- ////////////////////filter section ////////////////////////////// -->
            <main class="results">
                <!-- ////////////////////photographer section ////////////////////////////// -->
                <div id="photographerList">

                    @foreach(var user in Model)
                    {
                        <div class="photographer-card"
                             data-specialty="@user.Specialty"
                             data-location="@user.Location"
                             data-availability="@user.Availiability">

                            <img src="@user.ImagePath" alt="@user.ImagePath">

                            <div class="details">
                                <h3> @user.FirstName @user.LastName</h3>
                                <p>Specialty: @user.Specialty</p>
                                <p>Location: @user.Location</p>
                               @*  <p>Price: 2000 L.E - 5000 L.E</p> *@
                                <p>Availability: @user.Availiability</p>
                            </div>

                            <form asp-controller="Photographer" asp-action="MyProfile" method="get">
                                <input type="hidden" name="id" value="@user.Id" />
                                <button type="submit">See Portfolio</button>
                            </form>

                        </div>

                        
                    }




