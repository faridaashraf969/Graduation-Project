@using Demo.BLL.Interfaces
@model Product
@inject ICategoryRepo CategoryRepo
@{
    var categories = new SelectList(CategoryRepo.GetAll(), "Id", "Name");
}

<h1>Add New Product</h1>
<br />
<form asp-action="Create" enctype="multipart/form-data">
    <div class="form-group  ">
        <label class="col-form-label" asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group ">
        <label class="col-form-label" asp-for="Description"></label>
        <input class="form-control" asp-for="Description" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group ">
        <label class="col-form-label" asp-for="Price"></label>
        <input class="form-control" asp-for="Price" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group ">
        <label class="col-form-label" asp-for="Quantity"></label>
        <input class="form-control" asp-for="Quantity" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <div class="form-group ">
        <label class="col-form-label" asp-for="Category"></label>
        <select class="form-control" asp-items="@categories" asp-for="CategoryId">
            <option value="@null">------Select Category------</option>

        </select>
    </div>

    <div class="form-group ">
        <label class="col-form-label" asp-for="Image"></label>
        <input class="form-control" asp-for="Image" />
    </div>

    <input type="submit" value="Submit" class="btn btn-primary" />
    <a asp-action="ProductList" class="btn btn-light">Back to List</a>
</form>

