@model Order
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Client landing Page</title>
    <link rel="stylesheet" href="~/css/landing.css"> 
    
    <link href="~/css/order-summary-page.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">

</head>
<body style="font-family: Montserrat">
    <!-- ///////////////////start nav section/////////////////////////////// -->
    <nav class="container">
        <p class="logo">Photocamp</p>
        <ul>
            <li><a asp-controller="Client" asp-action="ClientHome">Home</a></li>
            <li><a asp-controller="Home" asp-action="Fillter">Find a photographer</a></li>
            <li><a asp-controller="Product" asp-action="List">Store</a></li>
            <li><a asp-controller="Course" asp-action="Index">Courses</a></li>
            <li><a asp-controller="Client" asp-action="MyCourses">My Courses</a></li>
        </ul>
        <a class="u-icon"> <img src="~/files/clientimages/user-icon.svg" alt="user-icon"></a>
        <button class="nav-button" onclick="location.href='@Url.Action("SignOut","Account")'">Sign Out</button>
    </nav>
    <hr />
<h3>Payment Confirmation</h3>
<br />
<h2 >Thank you for your order!</h2>
<br />
<p>Order Number: @Model.OrderNumber</p>
<p>Customer Name: @Model.User.FirstName @Model.User.LastName</p>
<h2>Total Amount: @Model.TotalAmount</h2>

<h3>Order Items</h3>
<table>
    
    @if(Model.Courses.Count()>0)
    {
        <thead>
            <tr>
                <th>Course</th>
                <th>Quantity</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderItems)
            {
                <tr>
                    <td>@item.Course.Topic</td>
                    <td>@item.Quantity</td>
                    <td>@item.Price</td>

                </tr>
            }
        </tbody>
    }
    else
    {
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderItems)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>@item.Quantity</td>
                    <td>@item.Price</td>

                </tr>
            }
        </tbody>
    }
    
</table>
</body>
</html>