@model Category
@{
    ViewData["Title"] = "Create";
}
<link href="~/css/new-category.css" rel="stylesheet" />

<div class="login-box">
    <h2 id="h2">Create New Category</h2>
    <form asp-action="Create">
        <div class="textbox">

            <label>Name</label><br>
            <input asp-for="Name" required>
        </div>
        <div class="textbox">

            <label>Description</label><br>
            <input asp-for="Description" required>
        </div>
        <!-- button  -->
        <div class="btns">
            <input type="submit" class="btn" value="submit"><br>
            <a asp-action="AllCategory" class="btn btn1">Back to list</a>
        </div>
    </form>
</div>
