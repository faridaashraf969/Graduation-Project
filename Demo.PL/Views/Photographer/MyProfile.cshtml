@model ApplicationUser
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Course Details</title>
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/p.css" rel="stylesheet" />
    <script src="~/js/p.js"></script>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <!--main page start  -->
    <section class="details-container">
        <div class="main">
            <!-- img in page -->
            <div class="c-img">
                <img src="@Model.ImagePath" alt="@Model.ImagePath" class="photographer-image">
            </div>

            <!-- details -->
            <div>
                <h2>Photography Portfolio</h2>
                <h3>About Me </h3>
                <p>
                    Hi, I'm @Model.FirstName @Model.LastName, a professional photographer based in New York City. With over 10 years of experience, I specialize in portrait, landscape, and commercial photography. My passion lies in capturing moments that tell a story and evoke emotion.
                </p>

                <!--  -->

                <p> <strong>Speciality:</strong> @Model.Specialty </p>
                <p> <strong>Avialibility : </strong> @Model.Availiability </p>
                <p> <strong>location : </strong>  @Model.Location</p>
            </div>
        </div>
   
       
        <!--  -->
        <!-- gallary -->
        <hr>
        <h2>Portfolio Gallery</h2>
        <div class="gallery">
            @if (Model.PhotographerImages != null && Model.PhotographerImages.Any())
            {
                @foreach (var img in Model.PhotographerImages)
                {
                    <img src="@Url.Content("~/images/" + img.ImagePath)" class="photographer-image" alt="Image 1" onclick="openModal(this)" />
                }
            }
            else
            {
                <p>No images available.</p>
            }
        </div>

        
        <!-- javascript -->
        <!-- Modal for full screen image -->
        <div id="modal" class="modal" onclick="closeModal()">
            <span class="close">&times;</span>
            <img class="modal-content" id="modal-img">
        </div>
     
        <!-- end js -->
        <hr>
        <br>

        <!-- contact information -->
        <section class="contact">
            <h2>Contact Information</h2>
            <p>
                <strong>First Name : </strong> @Model.FirstName<br>
                <strong>Last Name : </strong> @Model.LastName<br>
                <strong>Email : </strong> @Model.Email<br>
                <strong>Phone : </strong> @Model.PhoneNumber<br>
                <strong>User Name : </strong> @Model.UserName<br>
                <strong>LinkedIn URL : </strong> @Model.PortofiloUrl<br>
            </p>
        </section>


    </section>

    <footer>
        <p>&copy; 2024 @Model.UserName photography . All rights reserved.</p>
    </footer>
    <script src="~/js/p.js"></script>
</body>
</html>

