@model EditProfileViewModel

<h2>Edit Profile Information</h2>

<form asp-action="EditProfile" method="post" enctype="multipart/form-data" style="border: 1px solid #ccc; padding: 20px; border-radius: 10px; max-width: 600px; margin: 0 auto;">
    <div class="form-group" style="margin-bottom: 20px;">
        <label for="FullName">Full Name:</label>
        <input type="text" id="FirstName" name="FirstName" value="@Model.FirstName" class="form-control" style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;" />
    </div>
    <div class="form-group" style="margin-bottom: 20px;">
        <label for="Phone">Phone:</label>
        <input type="text" id="Phone" name="Phone" value="@Model.Phone" class="form-control" style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;" />
    </div>
    <div class="form-group" style="margin-bottom: 20px;">
        <label for="LastName">LastName:</label>
        <input type="text" id="LastName" name="LastName" value="@Model.LastName" class="form-control" style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;" />
    </div>
    <div class="form-group" style="margin-bottom: 20px;">
        <label for="LinkedInUrl">LinkedIn URL:</label>
        <input type="text" id="LinkedInUrl" name="LinkedInUrl" value="@Model.LinkedInUrl" class="form-control" style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;" />
    </div>
    <div class="form-group" style="margin-bottom: 20px;">
        <label for="ProfileImage">Profile Image:</label>
        <input type="file" id="ProfileImage" name="ProfileImage" class="form-control-file" style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;" />
        @if (Model.ImagePath != null)
        {
            <img src="@Model.ImagePath" alt="Profile Image" style="margin-top: 10px; width: 50px; height: 50px; object-fit: cover; border-radius: 50%;" />
        }

    </div>
    <button type="submit" class="btn" style="background-color: orange; color: white; padding: 10px 20px; border: none; border-radius: 5px;">Save Changes</button>
</form>


