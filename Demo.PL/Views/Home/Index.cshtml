@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @* <link rel="stylesheet" type="text/css" href="HomePage.css"> *@
    <link href="~/css/homepage.css.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <script src="~/js/home page.js.js"></script>
    @* <script src="HomPage.js"></script> *@
    <title>Photocamp</title>
</head>
<body>
    @* <!-- ///////////////////start nav section/////////////////////////////// --> *@
    <nav class="container">
        <p class="logo">Photocamp</p>
        <ul>
            <li><a href="Account/Register">Home</a></li>
            <li><a href="Account/Register">Find a Photographer</a></li>
            <li><a href="Account/Register">Store</a></li>
            <li><a href="Account/Register">Courses</a></li>
            <li><a href="Account/Register">About Us</a></li>
        </ul>
        <button class="nav-button" onclick="location.href='@Url.Action("Register","Account")'">Sign Up</button>
    </nav>
    <!-- ///////////////////end nav section/////////////////////////////// -->
    <!-- ///////////////////start hero section/////////////////////////////// -->
    <section class="hero-section">
        <div class="hero-content">
            <h1>Discover the World of Photography at Photocamp</h1>
            <p>Explore our photographer search, courses , and equipment marketplace to take your photography skills to the next level. </p>
            <div class="hero-buttons">
                <button class="nav-b1" onclick="location.href='@Url.Action("Register","Account")'">Sign Up</button>
                <button class="nav-b2">Learn More</button>
            </div>
        </div>
    </section>
    <!-- ///////////////////end hero section/////////////////////////////// -->
    <!-- ///////////////////start bid section/////////////////////////////// -->
    <section class="container">
        <div class="bid-content">
            <h2 class="bid-title">Discover the Future of Photography Services</h2>
            <div class="bid-desc">
                <p>Introducing our unique bidding system that connects photographer with clients. Say goodbye to traditional methods and experience a new way to find the perfect photographer for your needs. With our platform, you can easily compare quotes, portfolios, and reviews to make an informed decision.</p>
                <div>
                    <a href="Account/Register" > Sign Up </a>
                    <img src="~/files/images/arrow.svg" alt="arrow" />
                  
                </div>
            </div>
        </div>
    </section>
    <!-- ///////////////////end bid section/////////////////////////////// -->
    <!-- ///////////////////start filter section/////////////////////////////// -->
    <section class="filter-main">
        <div class="filter-section container">
            <div class="filter-content">
                <h4>Find the Perfect Photographer for Your Needs</h4>
                <p>Our search and filter tool makes it easy to discover talented photographers who specialize in the style you desire. Whether you need a wedding photographer, portrait photographer, or someone to capture your special event, we’ve got you covered.</p>
                <div>
                    <a href="Account/Register" class="link">Sign Up</a>
                    <img src="~/files/images/arrow.svg" alt="arrow" />
                </div>
            </div>
            <img src="~/files/images/woman-with-camera.jpg" alt="woman-with-camera" class="filter-img">
        </div>
    </section>
    <!-- ///////////////////end filter section/////////////////////////////// -->
    <!-- ///////////////////start course section/////////////////////////////// -->
    <section class="container">
        <div class="course-section">
            <div class="course-content">
                <div class="course-disc">
                    <h4>Discover the Perfect Online Photography Courses For Every Skill Level</h4>
                    <p>At Photocamp, we offer a wide range of online photography courses designed to cater to different skill levels. Whether you’re a beginner looking to learn the basics  or an experienced photographer wanting to refine your techniques, our courses have got you covered. </p>
                    <div class="course-dicount">
                        <div class="discount1">
                            <h5>50% OFF</h5>
                            <p>Limited Time Offer, Enroll now and Enhance your Skills.</p>
                        </div>
                        <div class="discount2">
                            <h5>50% OFF</h5>
                            <p>Don’t Miss Out on this Exclusive Discount. Enroll Today!</p>
                        </div>
                    </div>
                    <div>
                        <a href="#" class="link">Enroll Now</a>
                        <img src="~/files/images/arrow.svg" alt="arrow">
                       
                    </div>
                </div>
            </div>
            <img src="~/files/images/online-course.jpg" alt="online-course" class="course-img">
        </div>
    </section>
    <!-- ///////////////////end course section/////////////////////////////// -->
    <!-- ///////////////////start store section/////////////////////////////// -->
    <section class="container">
        <div class="store-section">
            <div class="store-content">
                <div class="store-disc">
                    <h4>Discover Great Deals on Photography Store</h4>
                    <p>Browse our wide selection of photography equipment for sale. Find the perfect tools to enhance your skills and capture stunning images.</p>
                    <div class="store-parts">
                        <div class="part1">
                            <a href="Home/Store">Shop Now</a>
                            <p>Find cameras, lenses, tripods, lighting equipment, and more at affordable price.</p>
                        </div>
                        <div class="part2">
                            <a href="#">Sell Now</a>
                            <p>sell your photography equipment on our platform.</p>
                        </div>
                    </div>
                </div>
            </div>
            <img src="~/files/images/photography-tools.jpg" alt="photography-tools" class="store-img">
        </div>
    </section>
    <!-- ///////////////////end store section/////////////////////////////// -->
    <!-- ///////////////////start icons section/////////////////////////////// -->
    <section class="icon-main">
        <div class="icons-section container">
            <div class="icon-sec1">
                <img src="~/files/images/icon1.svg" alt="icon1">
                <h3>Connect with Clients and grow your Photography Business</h3>
                <p>Photocamp provides bidding system, allowing you to showcase your work and connect with potential clients who are looking for professional photographers like you.</p>
            </div>
            <div class="icon-sec1">
                <img src="~/files/images/icon2.svg" alt="icon2">
                <h3>Expand Your Skills with Photography courses</h3>
                <p>Photocamp offers a wide range og online photography courses taught by industry experts. Whether you are beginner or an experienced photographer.</p>
            </div>
            <div class="icon-sec1">
                <img src="~/files/images/icon3.svg" alt="icon3">
                <h3>Buy and Sell Photography Equipment</h3>
                <p class="p3">Photocamp features a market place where you can buy and sell photography equipment. Whether you are looking to upgrade your equipment or sell.</p>
            </div>
        </div>
    </section>
    <!-- ///////////////////end icons section/////////////////////////////// -->
    <!-- ///////////////////start community section/////////////////////////////// -->
    <section class="main-community">
        <div class="community-section container">
            <h3>Join the Photocamp Community and Showcase Your Photography Skills</h3>
            <p>Signing up for Photocamp is quick and easy. Simply create a profile, upload you best photos, and start engaging with the vibrant photography community. Whether you’re a professional photographer looking for clients or a beginner seeking ti improve your skills, Photocamp has the tools and resources to help you succeed.</p>
        </div>
    </section>
    <!-- ///////////////////end community section/////////////////////////////// -->
    <!-- ///////////////////start footer section/////////////////////////////// -->
    <footer class="footer-main">
        <div class="footer-section container">
            <ul>
                <li><a href="Home/Index">Home</a></li>
                <li><a href="#">Find a Photographer</a></li>
                <li><a href="Home/Store">Store</a></li>
                <li><a href="Home/Course">Courses</a></li>
                <li><a href="Home/AboutUs">About Us</a></li>
                <li><a href="Admin/AdminLogin">Admin</a></li>
            </ul>
            <p class="footer-logo">Photocamp</p>
            <a href="#"><img src="~/files/images/footer-icons.svg" alt="footer-icons"></a>
        </div>
        <p class="footer-p">COPYRIGHT © 2024 . ALL RIGHT RESERVED</p>
    </footer>
    <!-- ///////////////////end footer section/////////////////////////////// -->
</body>
</html>
