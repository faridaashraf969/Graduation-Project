@model Category
@{
    ViewData["Title"] = "Delete";
}

<link href="~/css/new-category.css" rel="stylesheet" />
<div asp-validation-summary="All"></div>
<div class="login-box">
    <h2 id="h2"> Delete @Model.Name Category</h2>
    <form asp-action="Delete">
        <div class="textbox">

            <label>Name</label><br>
            <input asp-for="Name" required>
        </div>
        <div class="textbox">

            <label>Description</label><br>
            <input asp-for="Description" required>
        </div>
        <!-- button  -->
        <div class="btns">
            <input type="submit" class="btn" value="Delete"><br>

            <a asp-controller="Category" asp-action="AllCategory" class="btn btn1">Cancel</a>
        </div>
    </form>
</div>