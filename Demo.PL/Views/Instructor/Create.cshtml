
@model Course

<h1>Add New Course</h1>
<br />
<form asp-action="Create" enctype="multipart/form-data">

    <div class="form-group  ">
        <label class="col-form-label" asp-for="Topic"></label>
        <input class="form-control" asp-for="Topic" />
        <span asp-validation-for="Topic" class="text-danger"></span>
    </div>
    <div class="form-group ">
        <label class="col-form-label" asp-for="Description"></label>
        <input class="form-control" asp-for="Description" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group ">
        <label class="col-form-label" asp-for="Price"></label>
        <input class="form-control" asp-for="Price" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group ">
        <label class="col-form-label" asp-for="Duration"></label>
        <input class="form-control" asp-for="Duration" />
        <span asp-validation-for="Duration" class="text-danger"></span>
    </div>
    <div class="form-group ">
        <label class="col-form-label" asp-for="Image"></label>
        <input class="form-control" asp-for="Image" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <div class="form-group ">
        <label class="col-form-label" asp-for="Requirements"></label>
        <input class="form-control" asp-for="Requirements" />
        <span asp-validation-for="Requirements" class="text-danger"></span>
    </div>

    <input type="submit" value="Submit" class="btn btn-primary" />
    <a asp-action="CourseList" class="btn btn-light">Back to List</a>
</form>


