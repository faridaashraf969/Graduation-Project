@model SessionRequest
@{
    ViewData["Title"] = "Details";
}

<h2>Session Request Details</h2>

<div>
    <h4>@Model.Description</h4>
    <p><strong>Date:</strong> @Model.SessionDate.ToString("f")</p>
    <p><strong>Price:</strong> @Model.Price.ToString("C")</p>
    <p><strong>Location:</strong> @Model.Location</p>
    <p><strong>Details:</strong> @Model.Details</p>
    <p><strong>Type:</strong> @Model.SessionType</p>
    <p><strong>Photographer:</strong> @Model.Photographer?.UserName</p>
    <p><strong>Client:</strong> @Model.Client?.UserName</p>
    <h4>Proposals</h4>
    @if (Model.Proposals != null && Model.Proposals.Any())
    {
        <ul>
            @foreach (var proposal in Model.Proposals)
            {
                <li>
                    <strong>Proposal:</strong> @proposal.ProposalText<br>
                    <strong>Additional Details:</strong> @proposal.AddtionalDetails<br>
                    <strong>Accepted:</strong> @(proposal.IsAccepted ? "Yes" : "No")
                </li>
            }
        </ul>
    }
    else
    {
        <p>No proposals available.</p>
    }
</div>

