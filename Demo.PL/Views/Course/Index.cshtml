<link href="~/css/store.css" rel="stylesheet" />
@model IEnumerable<Course>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/css/store.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />


    <title>Store</title>
</head>
<body>
    <!-- //////////////////////////////////////start nav bar/////////////////////////////////////////////// -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <p class="logo">Photocamp</p>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                            <a class="nav-link" asp-controller="Client" asp-action="ClientHome">Home</a>
                             
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="FindPhotographer" asp-action="FindPhotographer">Find a Photographer</a>    
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Course" asp-action="Index" >Courses</a>
                    </li>
                

                    
                </ul>
                <form class="d-flex" role="search" asp-action="Index" >
                    <input class="form-control me-2" name="topic" type="search" placeholder="Search by topic" aria-label="Search">
                    <button class="btn btn-outline-warning" type="submit">Search</button>
                </form>
            </div>
        </div>
    </nav>

    <!-- //////////////////////////////////////start nav bar/////////////////////////////////////////////// -->
  

    <div class="camera-sections">
        @{
            @foreach (var course in Model)
            {
                <div>
                    <h3>@course.Topic</h3>
                    <p>@course.Description</p>
                    <p>@course.Price.ToString("C")</p>
                    <p><img src="~/Files/Images/@course.ImageName" alt="@course.ImageName" style="width: 300px; height:200px;" /></p>
                    <a href="@Url.Action("Details", new { id = course.Id })">View Details</a>
                </div>
            }
        }

    </div>
</body>
</html>
