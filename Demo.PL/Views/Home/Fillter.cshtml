            <aside class="filters">
                <h2>Filters</h2>
                <div class="filter-section">
                    <h3>Specialty</h3>
                    <label><input type="checkbox" class="filter" name="specialty" value="Wedding"> Wedding</label>
                    <label><input type="checkbox" class="filter" name="specialty" value="Portrait"> Portrait</label>
                    <label><input type="checkbox" class="filter" name="specialty" value="Event"> Event</label>
                    <label><input type="checkbox" class="filter" name="specialty" value="Product"> Product</label>
                </div>
                <div class="filter-section">
                    <h3>Location</h3>
                    <label><input type="checkbox" class="filter" name="location" value="Cairo"> Cairo</label>
                    <label><input type="checkbox" class="filter" name="location" value="Giza"> Giza</label>
                    <label><input type="checkbox" class="filter" name="location" value="Alex"> Alex</label>
                    <label><input type="checkbox" class="filter" name="location" value="Fayoum"> Fayom</label>
