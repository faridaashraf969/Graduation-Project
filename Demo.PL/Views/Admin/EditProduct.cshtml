@using Demo.BLL.Interfaces
@model Product

@{
    ViewData["Title"] = "Edit Product";
}
@inject ICategoryRepo CategoryRepo
@{
    var categories = new SelectList(CategoryRepo.GetAll(), "Id", "Name");
}
<h1>Edit Product</h1>

<h4>Product : @Model.Name</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditProduct">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group ">
                <label class="col-form-label" asp-for="Category"></label>
                <select class="form-control" asp-items="@categories" asp-for="CategoryId">
                    <option value="@null">------Select Category------</option>

                </select>
            </div>
            <input type="hidden" asp-for="Id" name="Id" />
            <button type="submit" class="btn btn-primary">Edit</button>
        </form>
    </div>
</div>

<div>
    <a asp-action="ProductList">Back to List</a>
</div>



