<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

@model IEnumerable<Product>

    <a asp-action="Create" class="btn btn-success">Add New Product</a>
    <br />

    <div class="mt-5">
        <form asp-action="Index" class="row">
            <div class="col-8">

                <input type="text" class="form-control" name="name" placeholder="Enter Product's Name" />
            </div>
            <div class="col-4">
                <input type="submit" value="Search" class="btn btn-dark" />
            </div>
        </form>
    </div>

    
        <table class="table table-striped table-hover mt-3">
            <thead>
                <tr>
                    
                    <td>@Html.DisplayNameFor(e => e.Image)</td>
                    <td>@Html.DisplayNameFor(e => e.Name)</td>
                    <td>@Html.DisplayNameFor(e => e.Description)</td>
                    <td>@Html.DisplayNameFor(e => e.Price)</td>
                    <td>@Html.DisplayNameFor(e => e.Category)</td>
                    <td>@Html.DisplayNameFor(e => e.Quantity)</td>
                    <td>@Html.DisplayNameFor(e => e.Status)</td>
                    <td>Seller Name</td>
                   
                    <td>Update</td>
                    <td>Delete</td>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var Product in Model)
                    {
                        <tr>
                           
                            <td><img src="~/Files/Images/@Product.ImageName" class="rounded" height="40" width="40" alt="Employee Image" /></td>
                            <td>@Product.Name</td>
                            <td>@Product.Description</td>
                            <td>@Product.Price</td>
                            <td>@Html.DisplayFor(e => Product.Category.Name)</td>
                            <td>@Product.Quantity</td>
                            <td>@Product.Status</td>
                            <td>@(Product.Seller.FirstName + " " + Product.Seller.LastName)</td>

                            <partial name="_buttonPartialView" model="@Product.Id"></partial>

                        </tr>
                    }
                }
            </tbody>
        </table>





