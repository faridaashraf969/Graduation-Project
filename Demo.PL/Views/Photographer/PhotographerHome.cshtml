@model ApplicationUser
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="~/css/photographer.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Photographer page </title>
    
</head>
<body>
    <!-- start nav section -->
    <nav class="container">
        <p class="logo">Photocamp</p>
        <ul>
            <li><a asp-controller="Home" asp-action="Index" >Home</a></li>
            <li><a asp-controller="FindPhotographer" asp-action="Photographyfreelance">Bids</a></li>
            <li><a asp-controller="Course" asp-action="Index">Courses</a></li>
            <li><a asp-controller="Product" asp-action=" List">Store </a></li>
           
        <a asp-controller="Photographer" asp-action="MyProfile" asp-route-id="@Model.Id" class="u-icon">
            <img src="~/files/photographer imges/user-icon.svg" alt="user-icon">
        </a>
            
            <li class="sign-out"><a asp-controller="Account" asp-action="SignOut">SignOut </a></li>
            
       </ul>

    </nav>
    <!-- end nav section -->
    <!--start welcome section-->
    <section class="container welcome-sec">
        <div class="welc-sec1">
            <h2>Welcome to Photocamp</h2>
            
            <p>Excited to have you on board! Here, you'll find everything you need to thrive in the world of photography. Explore job offers, shop for gear, dive into courses, and manage your work effortlessly. Let's capture some magic together!</p>

            <p>As a photographer, you can add images to your Profile gallery to add Your latest works .</p>
            <p>And You can also Update Yor Portfolio , editing Your Contact Info or update your profile picture </p>
            <p>click the buttons below to upload images or edit yor profile: </p>
        </div>

     
        <img src="~/files/photographer imges/pic in welceome sec.png" alt="man with cam">
    </section>
    <a href="@Url.Action("UploadImage", "Photographer")" class="btn" style="background-color: orange; color: white;">Upload Images to your Gallery</a>
    <a href="@Url.Action("EditProfile", "Photographer")" class="btn" style="background-color: orange; color: white;">Edit Your portfolio </a>
   <br />

    <hr class="container">
    <!-- end welcome section -->
    <!--start  photographer feature -->
    <section class="container fet-sec">
        <!--  start see bid  -->
        <div class="see-bid">
            <h1>See bids</h1>
            <p>Explore the latest job offers from clients seeking your photography services. Click here to view and bid on exciting opportunities that match your expertise and availability.</p>
            <a href="Photographer/AllRequests" class="arrow"> <img src="~/files/photographer imges/arrow.svg" alt="arrow"></a>
        </div>
        <!-- end see bid -->
        <!-- start visit  store -->
        <div class="visit-store">
            <h1>Visit the store </h1>
            <p> Need new gear to elevate your photography game? Browse through our extensive collection of cameras, lenses, and accessories in the store. Find the perfect tools to bring your vision to life.</p>
            <a href="Product/List" class="arrow"> <img src="~/files/photographer imges/arrow.svg" alt="arrow"></a>
        </div>
        <!-- end visit to store -->
        <!-- start  photography courses -->
        <div class="photo-courses">
            <h1>Photography Courses </h1>
            <p>Ready to sharpen your skills and expand your knowledge? Enroll in our diverse range of photography courses and tutorials. From beginner basics to advanced techniques, there's something for every level of expertise.</p>
            <a href="Course/Index" class="arrow"> <img src="~/files/photographer imges/arrow.svg" alt="arrow"></a>
        </div>
        <!-- end photography courses -->
       @*  <!-- start view your work list   -->
        <div class="view-work">
            <h1>View Your Work List</h1>
            <p>Keep track of your ongoing projects and appointments in one convenient place. Review upcoming shoots, manage bookings, and stay organized as you navigate your photography journey.</p>
            <a href="#" class="arrow"> <img src="~/files/photographer imges/arrow.svg" alt="arrow"></a>
        </div> *@
        <!-- end view your work list -->
    </section>

    <!-- end photogrpher feature -->
    <!-- ///////////////////start footer section/////////////////////////////// -->

    <footer class="footer-main">
        <p class="footer-logo">Photocamp</p>
        <div class="footer-section container">
            <ul>
                <li><a asp-controller ="Home" asp-action="Index">Home</a></li>
                <li><a href="#">Bids</a></li>
                <li><a asp-controller="Course" asp-action="Index" >Courses</a></li>
                <li><a asp-controller="Product" asp-action=" List">Stores</a></li>
                <li><a href="#">Work list</a></li>
                <li><a asp-controller=" Account" asp-action="SignOut"></a>SignOut</li>

            </ul>
            <p class="footer-p">COPYRIGHT © 2024 . ALL RIGHT RESERVED</p>
            <div class="social-icons">
                <a href="#"><img src="~/files/photographer imges/fb.svg"></a>
                <a href="#"><img src="~/files/photographer imges/instagram 1.svg"></a>
                <a href="#"><img src="~/files/photographer imges/twitter 1.svg"></a>
                <a href="#"><img src="~/files/photographer imges/linkedin 1.svg"></a>
            </div>
        </div>
    </footer>
    <!-- ///////////////////end footer section/////////////////////////////// -->

</body>
</html>
