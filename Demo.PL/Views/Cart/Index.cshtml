<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>cart-table</title>
    <link rel="stylesheet" href="~/css/cart-table.css">
   <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Barlow:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&family=Berkshire+Swash&family=Fira+Sans:ital,wght@1,100&family=Montserrat:ital,wght@0,100..900;1,100..900&family=Mrs+Saint+Delafield&family=Oswald:wght@500&family=Raleway:ital,wght@1,500&family=Roboto:ital@1&family=Rubik+Iso&display=swap" rel="stylesheet">

  <style>
    /* Optional: Additional custom styling for table borders */
    .table-bordered {
      border: 1px solid #dee2e6;
    }
  </style>
</head>
<body>
   <!-- //////////////////////////////////////start nav bar/////////////////////////////////////////////// -->
   <nav class="navbar navbar-expand-lg bg-body-tertiary">
    <div class="container-fluid">
      <p class="logo">Photocamp</p>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="#">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Find a Photographer</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Courses</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">About Us</a>
          </li>
          
        
        </ul>
        <form class="d-flex" role="search">
          <input class="form-control me-2" name="product" type="search" placeholder="Search By Product" aria-label="Search">
          <button class="btn btn-outline-warning" type="submit">Search</button>
        </form>
      </div>
    </div>
  </nav>
  
  <!-- //////////////////////////////////////start nav bar/////////////////////////////////////////////// -->
  <div class="container">
    <h2>Your Shopping cart</h2>
    <table class="table">
      <thead>

        <tr style="background-color: #f8f9fa;">
        <th>Product</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Total</th>
        </tr>
       
      </thead>

      <tbody>
          @{
                    @if (Model.CartItems.Count == 0)
                    {
                        <p>Your cart is empty.</p>
                    }
                    else
                    {
                        @foreach (var item in Model.CartItems)
                        {
                            <tr>
                                <td>@item.Product.Name</td>
                                <td>@item.Quantity</td>
                                <td>@item.Price</td>
                                <td>@(item.Quantity * item.Price)</td>
                            </tr>
                        }
                    }
                } 
      </tbody>

    </table>
  
  <div class="button-container">

            <p>Total Amount: @Model.CartItems.Sum(ci => ci.Quantity * ci.Price)</p>

            <form asp-action="ClearCart" method="post">
                <button type="submit">Clear Cart</button>
            </form>
            <form asp-controller="order" asp-action="Checkout" method="post">
                <button type="submit">Checkout</button>
            </form>
            <hr />
            <button type="submit" class="all-item" onclick="location.href='@Url.Action("List", "Product")'">Add New Product</button>
  </div>
</div>
  <!-- Bootstrap JS (optional) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
 
</body>
</html>


